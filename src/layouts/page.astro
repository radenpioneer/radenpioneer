---
import MainLayout from './main.astro'

interface Props {
  title: string
}

const { title } = Astro.props as Props
---

<MainLayout>
  <Fragment slot="head">
    <slot name="head" />
  </Fragment>
  <article class="prose prose-lg article">
    <h1 class="title">{title}</h1>
    <slot />
  </article>
</MainLayout>

<style lang="scss">
  @use '../styles/fonts';

  .title {
    @extend %heading;
    @apply font-extrabold;
  }

  .article {
    @apply max-w-screen-md mx-auto;
    @extend %body;
  }
</style>
